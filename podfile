# Uncomment this line to define a global platform for your project
# platform :iOS, '10.0'
source 'http://211.159.217.203/Apple/Podspec.git'
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '10.0'
target 'Demo' do
  use_frameworks!

  pod 'RxSwift', '~> 4.0'
  pod 'RxCocoa', '~>4.1.0'
  pod 'MLeaksFinder'
  pod 'FLEX'
  pod 'SQLite.swift', '~> 0.11.5'
  #AvatarX
  pod 'SSZipArchive'
  pod 'Yaml', '~> 3.4.3'
  #network
  pod 'Moya/RxSwift', '~> 11.0'
  pod 'ObjectMapper'
  pod 'ReachabilitySwift'
  pod 'NVMAspects'
  pod 'MINavigator', :path=>'~/MINavigator/'
  #pod 'MICommonUI', :path=>'~/MICommonUI/'
  
  pod 'SDWebImage'
  pod 'CTMediator'
  #单元测试
  #pod 'Kiwi'
  
end

#关闭某些库的bitcode
post_install do |installer|
    installer.pods_project.targets.each do |target|
        if ['SnapKit'].include?target.name
            target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.2'
                config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.10'
            end
            else target.build_configurations.each do |config|
                config.build_settings['SWIFT_VERSION'] = '4.0'
                config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.10'
            end
        end
        if ['XiaoFuTech-develop','Kiwi'].include?target.name
            target.build_configurations.each do |config|
                config.build_settings['ENABLE_BITCODE'] = 'NO'
            end
        end
    end
end

